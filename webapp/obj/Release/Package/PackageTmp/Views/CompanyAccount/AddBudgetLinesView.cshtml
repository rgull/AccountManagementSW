@model SmartAdminMvc.Models.Mybudget
@Html.HiddenFor(m => m.SelectedBudgetTypeId)
@for (int j = 0; j < Model.MyValuebudgetFullList.Count(); j++)
{

    @*<label class="label">@Html.LabelFor(m => m.MyValuebudgetFullList[j].categoryName, Model.MyValuebudgetFullList[j].categoryName) - ( @Html.LabelFor(m => m.MyValuebudgetFullList[j].budgetTypeName, Model.MyValuebudgetFullList[j].budgetTypeName) )</label>*@
    <h3 class="subttl">@Html.LabelFor(m => m.MyValuebudgetFullList[j].categoryName, Model.MyValuebudgetFullList[j].categoryName) - ( @Html.LabelFor(m => m.MyValuebudgetFullList[j].budgetTypeName, Model.MyValuebudgetFullList[j].budgetTypeName) )</h3>
                                    <section>
                                        @Html.HiddenFor(m => m.MyValuebudgetFullList[j].categoryId)
                                        @Html.HiddenFor(m => m.MyValuebudgetFullList[j].budgetTypeId)
                                        @*<label class="input">*@

                                        @for (int i = 0; i < Model.MyValuebudgetFullList[j].MyValueParameterList.Count(); i++)
                                        {
                                            <div class="budget-item">
                                                <div class="formrow">
                                                    @Html.LabelFor(m => m.MyValuebudgetFullList[j].MyValueParameterList[i].name, Model.MyValuebudgetFullList[j].MyValueParameterList[i].name)
                                                    @*(@System.Configuration.ConfigurationManager.AppSettings["CurrencySymbol"].ToString())*@
                                                    <i></i>@Html.TextBoxFor(m => m.MyValuebudgetFullList[j].MyValueParameterList[i].budget, new { @class = "form-control", id = "BugetValue", @required = "required" })
                                                    @Html.HiddenFor(m => m.MyValuebudgetFullList[j].MyValueParameterList[i].id)
                                                    @Html.HiddenFor(m => m.MyValuebudgetFullList[j].MyValueParameterList[i].isUpdated, new { @class="is-updated"})
                                                    @Html.HiddenFor(m => m.MyValuebudgetFullList[j].MyValueParameterList[i].budgetTypeId)
                                                    @*@Html.HiddenFor(m => m.MyValuebudgetFullList[j].MyValueParameterList[i].reportType)*@
                                                </div>
                                                <div class="formrow2">
                                                    <label class="label"> Divide Budget By </label>
                                                    <div class="inline-group">
                                                        @for (int rl = 0; rl < Model.ReportTypeList.Count(); rl++)
                                                    {
                                                    <label class="radio">
                                                        @Html.RadioButtonFor(m => m.MyValuebudgetFullList[j].MyValueParameterList[i].SelectedreportTypeId, Model.ReportTypeList[rl].id, new { type = "radio", name = "radio-inline", @class="report-type" })
                                                        <i></i> @Model.ReportTypeList[rl].name
                                                        @Html.HiddenFor(m => Model.ReportTypeList[rl].id)
                                                        @Html.HiddenFor(m => Model.ReportTypeList[rl].name)
                                                    </label>

                                                    }
                                                        <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter Budget Type</b>
                                                    </div>
                                                </div>
                                                <div class="formrow2">
                                                    <label class="label">Once In Month</label>
                                                    <div class="checkboxgroup">
                                                        <label class="checkbox">
                                                            @*<input type="checkbox" name="rememberMe" value="true" checked="checked">*@
                                                            @Html.CheckBoxFor(m => m.MyValuebudgetFullList[j].MyValueParameterList[i].isAddOnceInMonth)
                                                            <i></i> Select this if you want to split Actual amount in a Month.
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <hr />
                                        }

                                        @*</label>*@
                                    </section>

}