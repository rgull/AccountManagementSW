@model SmartAdminMvc.Areas.Admin.Models.Addadminuser
@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

 <div id="content" class="container width">
        <div class="row center">

            <div class="col-xs-12 col-sm-12 col-md-8 in_blk">
                <div class="well no-padding">
                    <form method="post" action="#" name="logFrm" class="smart-form clientform client-form"role="form">
                            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <header class="left_align">
                                    Add New Admin
                                </header>

                                <fieldset>
                                    <section class="formrow2">
                                        <label class="label">Name</label>
                                        <label class="input">
                                            <i class="icon-append fa fa-user"></i>
                                            @Html.TextBoxFor(m => m.name, new { @class = "form-control", @required = "required", maxlength = 90, placeholder = "Name" })
                                            <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter name</b>
                                        </label>
                                    </section>
                                    <section class="formrow2">
                                        <label class="label">E-mail Id</label>
                                        <label class="input">
                                            <i class="icon-append fa fa-user"></i>
                                            @*<input type="email" name="email" value="demo@email.com">*@
                                            @Html.TextBoxFor(m => m.email, new { @class = "form-control", @required = "required", type = "email", maxlength = 50, placeholder = "Email Id" })
                                            <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter email address (username) </b>
                                        </label>
                                    </section>
                                   
                                    <section class="formrow2">
                                        <label class="label">Password</label>
                                        <label class="input">
                                            <i class="icon-append fa fa-lock"></i>
                                            @*<input type="password" name="password" value="demo">*@
                                            @Html.PasswordFor(m => m.password, new { @class = "form-control", @required = "required", maxlength = 20, placeholder = "Password", type = "password" })
                                            <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Please enter password</b>
                                        </label>
                 
                                    </section>

                                    <section class="formrow2">
                                        <label class="label">Status</label>
                                        <div class="checkboxgroup">
                                            <label class="checkbox ">
                                                @*<input type="checkbox" name="rememberMe" value="true" checked="checked">*@
                                                @Html.CheckBoxFor(m => m.isActive)
                                                <i></i>is Active
                                            </label>
                                        </div>
                                    </section>

                                </fieldset>
                                <footer>
                                    <button class="btn btn-white" type="button" onclick="@("location.href='" + Url.Action("Adminmanagement", "Admin") + "'")">Cancel</button>
                                    <button type="submit" class="btn btn-primary">
                                       Save
                                    </button>
                                </footer>
                            }
                        </form>
                </div>

            </div>
        </div>
    </div>

