@model SmartAdminMvc.Areas.Admin.Models.addCompany
@{
    ViewBag.Title = "AddCompany";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="content" class="container width">
    <div class="row center">

        <div class="col-xs-12 col-sm-12 col-md-8 in_blk">
            <div class="well no-padding">
                <form method="post" action="#" name="logFrm" class="smart-form clientform client-form" role="form">
                    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <header class="left_align">
                            Add New Company
                        </header>

                        <fieldset>
                            <section class="formrow2">
                                <label class="label">Company Name</label>
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    @Html.TextBoxFor(m => m.name, new { @class = "form-control", @required = "required", maxlength = 90, placeholder = " Company Name" })
                                    <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter Company Name</b>
                                </label>
                            </section>
                            <section class="formrow2">
                                <label class="label">E-mail</label>
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    @*<input type="email" name="email" value="demo@email.com">*@
                                    @Html.TextBoxFor(m => m.emailId, new { @class = "form-control", @required = "required", maxlength = 90, type = "email", placeholder = "Email Id" })
                                    <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter email address</b>
                                </label>
                            </section>

                            <section class="formrow2">
                                <label class="label">Password</label>
                                <label class="input">
                                    <i class="icon-append fa fa-lock"></i>
                                    @*<input type="password" name="password" value="demo">*@
                                    @Html.PasswordFor(m => m.password, new { @class = "form-control", @required = "required", placeholder = "Password", maxlength = 20, type = "password" })
                                    <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Please enter password</b>
                                </label>

                            </section>
                            <section class="formrow2">
                                <label class="label">Contact Name</label>
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    @Html.TextBoxFor(m => m.contactName, new { @class = "form-control", @required = "required", maxlength = 90, placeholder = "Contact Name" })
                                    <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter Contact Name</b>
                                </label>
                            </section>
                            <section class="formrow2">
                                <label class="label">Contact No.</label>
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    @*<input type="email" name="email" value="demo@email.com">*@
                                    @Html.TextBoxFor(m => m.contactNo, new { @class = "form-control", @required = "required", maxlength = 20, placeholder = "Contact No." })
                                    <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter Contact No.</b>
                                </label>
                            </section>
                            <section class="formrow2">
                                <label class="label">City</label>
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    @*<input type="email" name="email" value="demo@email.com">*@
                                    @Html.TextBoxFor(m => m.city, new { @class = "form-control", maxlength = 50, placeholder = "City" })
                                    <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter City</b>
                                </label>
                            </section>
                            <section class="formrow2">
                                <label class="label">State</label>
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    @*<input type="email" name="email" value="demo@email.com">*@
                                    @Html.TextBoxFor(m => m.state, new { @class = "form-control", maxlength = 50, placeholder = "State" })
                                    <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter State</b>
                                </label>
                            </section>
                            <section class="formrow2">
                                <label class="label">Country</label>
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    @*<input type="email" name="email" value="demo@email.com">*@
                                    @Html.TextBoxFor(m => m.country, new { @class = "form-control", maxlength = 50, placeholder = "Country" })
                                    <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter Country</b>
                                </label>
                            </section>
                            <section class="formrow2">
                                <label class="label">Address</label>
                                <label class="input">
                                    <i class="icon-append fa fa-user"></i>
                                    @*<input type="email" name="email" value="demo@email.com">*@
                                    @Html.TextAreaFor(m => m.address, new { @class = "form-control", @required = "required", maxlength = 300, placeholder = "Address" })
                                    <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter Address</b>
                                </label>
                            </section>
                            <section class="formrow2">
                                <label class="label">Status</label>
                                <div class="checkboxgroup">
                                    <label class="checkbox left_align">
                                        @*<input type="checkbox" name="rememberMe" value="true" checked="checked">*@
                                        @Html.CheckBoxFor(m => m.isActive)
                                        <i></i>is Active
                                    </label>
                                </div>
                            </section>

                            <br />
                            <h3 class="subttl2">Line Items</h3>

                            @*@for (int i = 0; i < Model.CategoryValueSelected.Count(); i++)
                            {
                                <label class="checkbox left_align">
                                    @Html.CheckBoxFor(m => Model.CategoryValueSelected[i].selected)
                                    <i></i> @Model.CategoryValueSelected[i].name
                                    @Html.HiddenFor(m => Model.CategoryValueSelected[i].id)
                                    @Html.HiddenFor(m => Model.CategoryValueSelected[i].name)
                                </label>

                            }*@
                            @for (int j = 0; j < Model.CategorywithList.Count(); j++)
                            {
                                <section class="formrow2">
                                    @*<label class="label">@Html.LabelFor(m => m.CategorywithList[j].budgetTypeName, Model.CategorywithList[j].budgetTypeName)</label>*@
                                    <label class="label">@Html.LabelFor(m => m.CategorywithList[j].categoryName, Model.CategorywithList[j].categoryName) - ( @Html.LabelFor(m => m.CategorywithList[j].budgetTypeName, Model.CategorywithList[j].budgetTypeName) )</label>
                                    @Html.HiddenFor(m => m.CategorywithList[j].categoryId)
                                    @Html.HiddenFor(m => m.CategorywithList[j].budgetTypeId)
                                    <div class="checkboxgroup">
                                        @for (int i = 0; i < Model.CategorywithList[j].CategoryValueList.Count(); i++)
                                        {
                                            <label class="checkbox left_align">
                                                @Html.CheckBoxFor(m => Model.CategorywithList[j].CategoryValueList[i].selected)
                                                <i></i> @Model.CategorywithList[j].CategoryValueList[i].name
                                                @Html.HiddenFor(m => Model.CategorywithList[j].CategoryValueList[i].id)
                                                @Html.HiddenFor(m => Model.CategorywithList[j].CategoryValueList[i].name)
                                            </label>

                                        }
                                    </div>
                                </section>

                            }


                            </fieldset>
                            <footer>
                                <button class="btn btn-white" type="button" onclick="@("location.href='" + Url.Action("CompanyManagement", "Company") + "'")">Cancel</button>
                                <button type="submit" class="btn btn-primary">
                                    Save
                                </button>
                            </footer>
                    }
                    </form>
                </div>



        </div>
    </div>
</div>



